@prefix rr: <http://www.w3.org/ns/r2rml#>.
@prefix rml: <http://semweb.mmlab.be/ns/rml#>.
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#>.
@prefix ql: <http://semweb.mmlab.be/ns/ql#>.
@prefix map: <http://mapping.example.com/>.

map:map_person_0 rml:logicalSource map:source_0;
    a rml:TriplesMap;
    rdfs:label "person";
    rr:predicateObjectMap map:pom_1;
    rr:subjectMap map:s_0;
    rr:predicateObjectMap map:pom_0.
map:om_0 rr:termType rr:IRI;
    rr:constant "http://xmlns.com/foaf/0.1/Person";
    a rr:ObjectMap.
map:om_1 a rr:ObjectMap;
    rr:termType rr:Literal;
    rr:template "{firstname}".
map:pm_0 rr:constant rdf:type;
    a rr:PredicateMap.
map:pm_1 rr:constant <http://example.com/name>;
    a rr:PredicateMap.
map:pom_0 a rr:PredicateObjectMap;
    rr:objectMap map:om_0;
    rr:predicateMap map:pm_0.
map:pom_1 a rr:PredicateObjectMap;
    rr:predicateMap map:pm_1;
    rr:objectMap map:om_1.
map:s_0 rr:template "http://example.com/{firstname}";
    a rr:SubjectMap.
map:source_0 a rml:LogicalSource;
    rml:referenceFormulation ql:CSV;
    rml:source "data.csv".